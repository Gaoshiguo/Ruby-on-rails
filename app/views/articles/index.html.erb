<h1 style="text-align: center;color:black ">以往博客内容展示</h1>
<table>
  <tr>
    <th>以往文章标题</th>
    <th>以往文章内容</th>
    <th colspan="3"></th>
  </tr>
  <% @articles.each do |article| %>
    <tr>
      <td><%= article.title %></td>
      <td><%= article.text %></td>
      <td><%= link_to '展示', article_path(article) %></td>
      <td><%= link_to '编辑更新', edit_article_path(article) %></td>
      <td><%= link_to '删除', article_path(article),
              method: :delete,
              data: { confirm: '你确定要删除这篇文章吗?' } %></td>
    </tr>
  <% end %>
</table>
<%= link_to '创建一篇新的博客', new_article_path %>